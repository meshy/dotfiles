[user]
  name = Charlie Denton
  email = charlie@meshy.co.uk

[core]
  editor = nvim
  excludesfile = ~/.gitignore
  whitespace = blank-at-eol,cr-at-eol,tabwidth=4,tab-in-indent,space-before-tab
  pager = diff-so-fancy

[alias]
  a = add
  aa = !git add . && git status
  ap = add -p
  amend = commit --amend -v
  b = branch
  c = commit -v
  co = checkout
  d = diff
  dc = diff --cached
  df = diff --function-context
  ds = !git diff && git status
  dw = diff --color-words
  ld = log ORIG_HEAD.. --stat --no-merges
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  merged = branch --merged
  pl = pull
  plp = pull --prune
  ps = push
  pr = pull-request
  s = status
  ss = status -s
  in = !git fetch && git log ..origin/master
  writers = shortlog -sn

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = red

[color "diff"]
  frag = magenta bold
  meta = yellow
  new = green bold
  old = red bold
  whitespace = red reverse

[color "status"]
  added = green
  changed = red
  untracked = yellow

[diff]
  algorithm = patience
  compactionHeuristic = true
  indentHeuristic = true

[status]
  relativePaths = true

[github]
  user = meshy

[push]
  default = current

[merge]
  conflictstyle = diff3

[commit]
  gpgsign = true

[init]
  templatedir = ~/personal/dotfiles/git_template
